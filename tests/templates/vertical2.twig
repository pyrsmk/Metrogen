<!DOCYTPE html>
<html>
	<head>
		<title>Myriade - Vertical layout</title>
		<style>
			body {
				margin: 0;
				background: black;
			}
			.container {
				margin: 0 auto;
				max-width: 800px;
				height: 100%;
			}
			.gallery {
				{{debug ? 'background: red;'}}
			}
		</style>
	</head>
	<body>
		<div class="container">
			<div class="gallery" style="{{gallery.css}}">
				{% for image in gallery.images %}
					<img src="{{image.path}}" alt="" style="{{image.css}}">
				{% endfor %}
			</div>
		</div>
	</body>
</html>